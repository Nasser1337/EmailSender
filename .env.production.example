# Production Environment Variables
# Copy this to .env on your production server and fill in actual values

# Database
DATABASE_URL="file:./prod.db"
# Or for PostgreSQL (recommended for production):
# DATABASE_URL="postgresql://user:password@localhost:5432/outreach_system?schema=public"

# Resend API
RESEND_API_KEY="re_your_actual_api_key_from_resend_dashboard"
RESEND_WEBHOOK_SECRET="whsec_your_webhook_secret_from_resend"

# App Configuration - CRITICAL: Use your actual public domain
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NODE_ENV="production"

# Email Configuration - Must match verified domain in Resend
FROM_EMAIL="info@medi-dental.be"
FROM_NAME="MediDental"
NEXT_PUBLIC_FROM_EMAIL="info@medi-dental.be"
NEXT_PUBLIC_FROM_NAME="MediDental"

# Security - Generate a random 32+ character string
NEXTAUTH_SECRET="generate-random-string-here-use-openssl-rand-base64-32"
NEXTAUTH_URL="https://yourdomain.com"

# Port (optional, defaults to 3000)
PORT=3000
